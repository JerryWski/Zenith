---

import { Icon } from 'astro-icon/components';
import GlowButton from '../Shared/GlowButton.astro';

interface ContentBlock {
  icon: string;
  iconWidth: number;
  iconHeight: number;
  title: string;
  description: string;
}

interface Props {
  header: string;
  subheader: string;
  contentBlocks: ContentBlock[];
  buttonText: string;
  buttonHref: string;
  customClass?: string;
}

const { header, subheader, contentBlocks, buttonText, buttonHref,customClass = '' } = Astro.props;
const containerClass = `text-white flex flex-col items-start gap-10 ${customClass}`;
---

<div class={containerClass}>
  <h3 class=' text-[clamp(1.6rem,3vw,3rem)] leading-[38.4px]'>
    {header}
  </h3>
  <p class='font-trakis uppercase text-xl leading-7'>
    {subheader}
  </p>
  <div class='flex flex-col items-end gap-7 self-stretch leading-[25px]'>
    {contentBlocks.map((block) => (
      <div class='flex self-stretch gap-7 items-center'>
        <Icon class='max-w-[22px]' name={block.icon} width={block.iconWidth} height={block.iconHeight} />
        <p>
          <span class='text-primary font-bold'>{block.title}</span><br />
          {block.description}
        </p>
      </div>
    ))}
  </div>
  <GlowButton text={buttonText} href={buttonHref} />
</div>
